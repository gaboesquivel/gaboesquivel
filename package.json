{
  "name": "gaboesquivel",
  "version": "4.1.0",
  "description": "Gabo Esquivel - Software Engineer",
  "author": "Gabo Esquivel",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "scripts": {
    "generate": "tsx scripts/generate.ts",
    "build": "npm run generate && tsup src/index.ts src/cli.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "hooks:pre-commit": "biome check --write --staged --no-errors-on-unmatched && git update-index --again",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.11.25",
    "@types/prompts": "^2.4.9",
    "fast-glob": "^3.3.0",
    "gray-matter": "^4.0.3",
    "simple-git-hooks": "2.11.1",
    "tsup": "^8.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.2",
    "zod": "^3.22.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run hooks:pre-commit"
  },
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./content/*": "./dist/content/*",
    "./projects.json": "./dist/projects.json",
    "./tech.json": "./dist/tech.json",
    "./tags.json": "./dist/tags.json"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "prompts": "^2.4.2"
  }
}
